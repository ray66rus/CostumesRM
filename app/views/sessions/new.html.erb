<% provide(:title, t('sessions.titles.signin')) %>

<div class="row">
  <div class="span6 offset3">
    <%= content_tag(:h1, t('sessions.headers.signin')) %>
    <%= form_for(:session, url: sessions_path) do |f| %>
      <%= f.label :email %>
      <%= f.text_field :email %>
      
      <%= f.label :password %>
      <%= f.password_field :password %>
      <br /><br />
      <%= f.submit t('helpers.submit.session.create'), class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>