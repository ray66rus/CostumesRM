<%= form_for @client, :url => link do |f| %>
  <%= render :partial => 'common/errors', :locals => { :object => @client, :object_name => 'клиента' } %>
  <div class="field">
    <%= f.label 'Название' %><br />
    <%= f.text_field :name %>
  </div>
  
  <div class="field">
    <%= f.label 'Телефон' %><br />
    <%= f.phone_field :phone %>
  </div>

  <div class="field">
    <%= f.label 'E-mail' %><br />
    <%= f.email_field :email %>
  </div>

  <div class="field">
    <%= f.label 'Адрес' %><br />
    <%= f.text_field :address %>
  </div>

  <div class="field">
    <%= f.label 'Контактное лицо' %><br />
    <%= f.text_field :contact %>
  </div>
  
  <div class="field">
    <%= f.label 'Комментарий' %><br />
    <%= f.text_area :comment, :rows => 3 %>
  </div>
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
