<%= form_for @part, :url => link, :html => { :multipart => true } do |f| %>
  <% if @part.errors.any? %>
    <div id="error_explanation">
      <h2>Невозможно добавить часть костюма: <%= pluralize(@part.errors.count, "error") %></h2>

      <ul>
      <% @part.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label 'Название' %><br />
    <%= f.text_field :name %>
  </div>
  
  <div class="place">
    <%= f.label 'Место' %><br />
    <%= f.text_field :place %>
  </div>

  <div class="price">
    <%= f.label 'Цена' %><br />
    <%= number_field_tag 'price', @part.costumes.length > 0 ? @part.costumes.first.price : 0 %>
  </div>
  
  <div class="field">
    <%= f.label 'Комментарий' %><br />
    <%= f.text_area :comment, :rows => 3 %>
  </div>
  
  <div class="field">
    <%= f.label 'Изображения' %><br />
    <% @part.pictures.each_with_index do |picture, i| %>
      <%= image_tag picture.image.url %>
      remove it:
      <%= check_box_tag name='pictures[picture-' + i.to_s + ']' %>
      <br>
    <% end %>
    <%= file_field_tag 'pictures[new_picture]' %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
